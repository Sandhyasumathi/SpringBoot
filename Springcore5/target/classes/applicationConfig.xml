<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd">

<bean id="emp1" class="com.service.Employee">
<constructor-arg value="1"></constructor-arg>
<constructor-arg value="Name"></constructor-arg>
<constructor-arg value="12345.22"></constructor-arg>
<constructor-arg value="City"></constructor-arg>
</bean>

<bean id="emp2" class="com.service.Employee">
<constructor-arg index="1" value="Name2"></constructor-arg>
<constructor-arg index="2" value="1245493.00"></constructor-arg>
<constructor-arg index="0" value="2"></constructor-arg>
<constructor-arg index="3" value="City2"></constructor-arg>
</bean>
</beans>